<div class="card dashboard-card" style="overflow:hidden">
    <div class="row">
        <div class="card-meta col-12 row collapsed">
            <div class="col-2 card-type">
                <i class="icon-me-lernplattform"></i>
            </div>
            <div class="col-10 card-rating-bar">
                <!-- <div class="hubcoursefileinfo">{{language}}</div> -->
                <span title="Durchschnitt: {{rating_avg}}">({{rating_count}})</span>
                <div id="" class="card-rate raty" data-identifier="{{templateid}}">
                    <i data-alt="1" class="{{starclass_1}} st_1" title="1"></i>
                    <i data-alt="2" class="{{starclass_2}} st_2" title="2"></i>
                    <i data-alt="3" class="{{starclass_3}} st_3" title="3"></i>
                    <i data-alt="4" class="{{starclass_4}} st_4" title="4"></i>
                    <i data-alt="5" class="{{starclass_5}} st_5" title="5"></i>
                </div>
            </div>
        </div>
        <div class="card-img dashboard-card-img" style="background-image: url(&quot;https://mbsmoodle2.localhost/theme/image.php/mebis/theme_boost_campus/1643043364/mebis_hat&quot;); height:200px;
            background-repeat:no-repeat;background-size:cover;background-position: center;">
            <span class="sr-only">Course image</span>
        </div>
        <!-- <div class="card-img  dashboard-card-img" style = 'height:250px; overflow:hidden'>
            {{{screenshot}}}
        </div> -->
        <div class="card-body col-12">
            <div class="courseoperations">
                {{#installurl}}
                <a class="btn btn-primary btn-block" href="{{{courseurl}}}" onclick="this.target='_blank'">{{#str}}visitdemo, block_customhub{{/str}}</a>
                <a class="btn btn-primary btn-block" href="{{{installurl}}}">{{#str}}install, block_customhub{{/str}}</a>
                {{/installurl}}
                {{#enrolurl}}
                <a class="btn btn-primary btn-block" href="{{{enrolurl}}}" style="margin-bottom: 3em;">{{#str}}addtocommunityblock, block_customhub{{/str}}</a>
                {{/enrolurl}}
            </div>
            <div class="text-muted muted d-flex mb-1 flex-wrap">{{creatorname}}</div>
            <h4 class="hubcoursetitle">{{fullname}}</h4>
            <a class="btn btn-secondary btn-block" data-toggle="collapse" href="#description{{hubcourseid}}" role="button" aria-expanded="false" aria-controls="collapseExample">
                {{#str}}description{{/str}}
            </a>
            <div class="hubcoursedescription collapse" id="description{{hubcourseid}}">{{description}}</div>
            <div class="hubcoursecontentinfo">{{subject}}</div>
            {{#activities}}
            <a class="btn btn-secondary btn-block" data-toggle="collapse" href="#activitiescollaps{{hubcourseid}}" role="button" aria-expanded="false"
                aria-controls="collapseExample">
                {{#str}}activities{{/str}}
            </a>
            <div class="collapse" id="activitiescollaps{{hubcourseid}}">
                <div class="">
                    {{{activities}}}
                </div>
            </div>
            {{/activities}}
            {{#blocks}}
            <a class="btn btn-secondary btn-block" data-toggle="collapse" href="#blockscollaps{{hubcourseid}}" role="button" aria-expanded="false" aria-controls="collapseExample">
                {{#str}}blocks{{/str}}
            </a>
            <div class="collapse" id="blockscollaps{{hubcourseid}}">
                <div class="">
                    {{{blocks}}}
                </div>
            </div>
            {{/blocks}}
        </div>
    </div>
</div>
{{#test}}
<div class="fullhubcourse clearfix">
    <div class="hubcoursetitlepanel">
        <h3 class="hubcoursetitle">{{fullname}}</h3>
    </div>
    <div class="hubcourseinfo clearfix">
        <div class="coursedescription">
            <div class="hubcoursedescription">{{description}}</div>
            <div class="additionaldesc">
                <div class="hubcourseuserinfo">{{creatorname}}</div>
                <div class="hubcoursecontentinfo">{{subject}}</div>
                <div class="hubcoursefileinfo">{{language}}</div>
                {{#activities}}
                <div>{{activities}}</div>
                {{/activities}}
                <div class="hubcourseoutcomes"></div>
            </div>
            {{#rating}}
            <div class="norating">{{rating}}</div>
            {{/rating}}
        </div>
        <div class="courselinks">
            <div class="coursescreenshot" id="image-32"></div>
            <div class="courseoperations">
                {{#installurl}}
                <a href="{{installurl}}" class="centeredbutton, hubcoursedownload">{{#str}}install, block_customhub{{/str}}</a>
                <a href="{{courseurl}}" class="hubcoursedownload" onclick="this.target='_blank'">{{#str}}visitdemo, block_customhub{{/str}}</a></div>
            {{/installurl}}
            {{#enrolurl}}
            <a href="{{enrolurl}}" class="hubcoursedownload">{{#str}}addtocommunityblock, block_customhub{{/str}}</a>
            {{/enrolurl}}
        </div>
    </div>
</div>
{{/test}}